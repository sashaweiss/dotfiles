" Options

set wrap
set number

set incsearch
set hlsearch

set ignorecase
set smartcase

" Mappings

inoremap jk <esc>

nnoremap J }
vnoremap J }
nnoremap K {
vnoremap K {

nnoremap z $
vnoremap z $h
nnoremap Z ^
vnoremap Z ^

nmap gd :vsc Edit.GoToDefinition<CR>
nmap gh :vsc Edit.QuickInfo<CR>

nmap gcc :vsc Edit.ToggleLineComment<CR>
vmap gcc :vsc Edit.ToggleLineComment<CR>

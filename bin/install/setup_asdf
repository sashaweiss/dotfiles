#!/usr/bin/env bash

# credits to @nathanshelly

if ! command -v asdf > /dev/null; then
  echo "asdf is not installed!"
  exit 1
fi

if ! asdf plugin-list | grep -q nodejs; then
  asdf plugin-add nodejs
  # install keyring - https://github.com/asdf-vm/asdf-nodejs#install
  bash ~/.asdf/plugins/nodejs/bin/import-release-team-keyring
fi

asdf plugin-list | grep -q python || asdf plugin-add python
asdf plugin-list | grep -q golang || asdf plugin-add golang

# install whatever tools are listed in "$HOME/.tool-versions"
cd "$HOME" && asdf install
